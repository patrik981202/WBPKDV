<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
  <addon id="repository.websharekodi" name="Webshare Repository" version="1.0.1" provider-name="ChatGPT">
      <extension point="xbmc.addon.repository" name="Webshare Repository">
          <info>https://patrik981202.github.io/WBPKDV/addons.xml</info>
          <checksum>https://patrik981202.github.io/WBPKDV/addons.xml.md5</checksum>
          <datadir>https://patrik981202.github.io/WBPKDV/zips/</datadir>
      </extension>
      <extension point="xbmc.addon.metadata">
          <summary lang="en">Webshare repository for Kodi</summary>
          <description lang="en">Repository to install Webshare Kodi plugin.</description>
          <platform>all</platform>
      </extension>
  </addon>

  <addon id="plugin.video.websharekodi" name="Webshare Kodi Plugin" version="1.0.0" provider-name="ChatGPT">
      <requires>
          <import addon="xbmc.python" version="3.0.0"/>
      </requires>
      <extension point="xbmc.python.plugin" library="main.py">
          <provides>video</provides>
      </extension>
      <extension point="xbmc.addon.metadata">
          <summary lang="en">Minimal Webshare plugin</summary>
          <description lang="en">Basic Webshare browsing and login support.</description>
          <platform>all</platform>
      </extension>
  </addon>
</addons>
